
mixin form-group(name, id, type, placeholder, db)
    .form-group( data-bind="css: {error : "+id+"Flag() === false }" )
        input(name= id type= type placeholder= placeholder id= id data-bind= db)

//- mixin button-group()

    

doctype html
head
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title "sign page"
    link(rel="stylesheet", href="style.css")
body
    .header#header
        h1 Welcome
    .container
        #signin.form(data-bind="visible:hasAccount")
            h3 login
            form(data-bind="submit: login" novalidate)
                +form-group('email', 'emailLogin', 'email', 'enter your email', "value: emailLogin")
                .form-group
                    input(type="password" placeholder = "Password" id="passwordLogin" data-bind="value: passwordLogin")
                .buttons
                    button.btn.btn-cancel(data-bind="click:reset") Cancel
                    button.btn.btn-submit(type="submit") Submit
            button.btn.btn-toggle(data-bind="click:toggleSign") Not a member? Sign-up!
        #signup.form(data-bind="hidden:hasAccount")
            h3 signup
            form(data-bind="submit: signup" novalidate)
                +form-group('email', 'emailSignup', 'email',"enter your email", "event: {change : checkForm},value: emailSignup")
                +form-group('Password', 'passwordSignup1', "password", "Your password", "event:{change :checkForm},value: passwordSignup1")
                +form-group('Password', 'passwordSignup2', "password", "Repeat your password", "event:{ change:checkForm},value: passwordSignup2")
                .form-group
                    .radio
                        input#genderFluid(type="radio", name="gender" value="Fluid" data-bind="checked: radioSelectedOptionValue")
                        label(for="genderFluid") Fluid!
                    .radio
                        input(type="radio", name="gender" value="Uknown" id="genderUnknown" data-bind="checked: radioSelectedOptionValue")
                        label(for="genderUnknown") Unknown!                  
                    .radio
                        input(type="radio", name="gender" value="Human" id="genderHuman" data-bind="checked: radioSelectedOptionValue")
                        label(for="genderHuman") Human!
                    .radio
                        input(type="radio", name="gender" value="Cyborg" id="genderCyborg" data-bind="checked: radioSelectedOptionValue")
                        label(for="genderCyborg") Cyborg!           
                label(for="dob") Date of birth
                +form-group("dob","dob", "date", "", "value: dob")

                .buttons
                    button.btn.btn-cancel(type="reset") Cancel
                    button.btn.btn-submit(type="submit") Submit
            button.btn.btn-toggle(data-bind="click:toggleSign") Already a member? Login!

